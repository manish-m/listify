<h1>Listing records for <%= @table_name %> </h1>

<table border="1">
  <tr>
      <% @fields.each do |f| %>
      <th><%= f.humanize %></th>
      <% end %>
    <th></th>
  </tr>

  <% @records.each do |record| %>
      <tr>
        <% @fields.each do |f| %>
            <td><%= record[f] %></td>
        <% end %>
        <td><%= link_to "Show", :action=> "show", :controller=> "records", @unique_field => record[@unique_field] %></td>
        <!--<td><= link_to 'Edit', edit_record_path(record) %></td>-->
        <!--<td><= link_to 'Destroy', record, :confirm => 'Are you sure?', :method => :delete %></td>-->
      </tr>
  <% end %>
</table>

