<h1>Listing connections</h1>

<table>
  <tr>
    <th>Adapter</th>
    <th>Host</th>
    <th>Username</th>
    <th>Password</th>
    <th>Database</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @connections.each do |connection| %>
  <tr>
    <td><%= connection.adapter %></td>
    <td><%= connection.host %></td>
    <td><%= connection.username %></td>
    <td><%= connection.password %></td>
    <td><%= connection.database %></td>
    <td><%= link_to 'Show', connection_path(connection) %></td>
    <td><%= link_to 'Edit', edit_connection_path(connection) %></td>
    <td><%= link_to 'Destroy', connection_path(connection), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

